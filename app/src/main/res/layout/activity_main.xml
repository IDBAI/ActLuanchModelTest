<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.godfather.actluanchmodeltest.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/start_StandarActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMainClick"
            android:text="启动StandarActivity" />

        <Button
            android:id="@+id/start_SingleTopActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMainClick"
            android:text="启动SingleTopActivity" />

        <Button
            android:id="@+id/start_SingleTaskActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMainClick"
            android:text="启动SingleTaskActivity" />

        <Button
            android:id="@+id/start_SingleInstanceActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMainClick"
            android:text="启动SingleInstanceActivity" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
